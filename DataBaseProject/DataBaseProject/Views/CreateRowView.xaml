<Window x:Class="DataBaseProject.Views.CreateRowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreateRowView" Height="281" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="271*"/>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="211*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="ColumnNamesDataGrid"
                  ItemsSource="{Binding ColumnNamesCollection}" Grid.ColumnSpan="5"/>
        <Button x:Name="Insert" Content="OK" Grid.Row="2" Grid.Column="3"/>
        <Button x:Name="Cancel" Content="Cancel" Grid.Row="2" Grid.Column="1"/>
    </Grid>
</Window>
